<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_url "bar2.jpg" %>);">
  <div class="container">
    <h1>The Fancy Schmancy Cocktail Club</h1>
    <p>Explore life-changing cocktail recipes from your favourite bars around the world </p>
    <a class="btn btn-ghost" <%= link_to "Add Cocktail", new_cocktail_path %> </a>
  </div>
</div>

<div class="container">
  <h1>All Cocktails</h1>
  <div class="cards" class="card" >
    <% @cocktails.each do |cocktail| %>
      <div class="card-cocktail" >
       <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, alt: "alttext", width: 300, height: 200, crop: :fill %>
        <% else %>
          <%= image_tag "bar.jpg", alt: "alttext", width: 300, height: 200 %>
        <% end %>
        <h5 class="card-title" ><%= cocktail.name %></h5>
        <div class="buttons">
          <%= link_to "Recipe", cocktail_path(cocktail), class: "btn btn-primary" %>
          <%= link_to cocktail_path(cocktail), method: :delete do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>




